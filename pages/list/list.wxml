<view class="index">
  <view class="body">
    <!--list-->
    <view class="list">
      <block wx:for-items="{{list}}" wx:key="{{item.id}}">
        <view class="list-item">
          <view id="{{item.id}}" class="item-content">
            <view class="item-text"  bindtap="onTap">{{item.name}}</view>
            <image class="item-img" src="../../img/Delete.png" bindtap="modelTap" data-index="{{index}}"></image>
          </view>
        </view>
      </block>
      <button bindtap="addOrder">添加</button>
    </view>
  </view>
</view>
