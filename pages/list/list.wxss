.body {
  padding: 0 30rpx 40rpx;
}

.list-item {
  margin: 20rpx 0;
  background-color: #FFFFFF;
  border-radius: 4rpx;
  overflow: hidden;
}

.item-content {
  padding: 30rpx;
  display: flex;
  align-items: center;

  transition: opacity .3s;
}

.item-text {
  flex: 1;
}

.item-img {
  width: 30rpx;
  height: 30rpx;
}
