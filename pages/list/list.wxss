.body {
  padding: 0 30rpx 40rpx;
}

.list-item {
  margin: 20rpx 0;
  background-color: #FFFFFF;
  border-radius: 4rpx;
  overflow: hidden;
}

.item-content {
  padding: 30rpx 30rpx 0rpx 30rpx;
  display: flex;
  align-items: center;
  transition: opacity .3s;
}

.item-text {
  flex: 1;
}

.item-img {
  width: 60rpx;
  height: 60rpx;
}

.item-date {
  padding: 0px 0px 10px 30rpx;
  font-size: 10px;
  color: #aaa;
}
